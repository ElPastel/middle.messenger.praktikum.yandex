.block-avatar
    if (avatar)
        img.chat-avatar(src=`https://ya-praktikum.tech/api/v2/resources/${avatar}`)
    else 
        img.chat-avatar(src='data:image/png;base64,')
.block-text
    h4.title__displayname #{title}
    p.last-message #{last_message ? last_message.content : null}
.block-data
    .block-date #{last_message ? last_message.time : null}
    div(class='new-message') #{unread_count}
